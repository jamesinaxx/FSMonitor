{
  "name": "fsmonitor",
  "displayName": "FS Monitor",
  "version": "1.0.2",
  "description": "Monitors the size of your current workspace and file in the status bar",
  "categories": [
    "Visualization",
    "Other"
  ],
  "keywords": [
    "size",
    "workspace",
    "folder",
    "file"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/jewlexx/FSMonitor"
  },
  "license": "MIT",
  "publisher": "jewlexx",
  "main": "./dist/extension.js",
  "scripts": {
    "build": "webpack --mode production --devtool hidden-source-map",
    "compile": "webpack",
    "lint": "eslint src --ext ts",
    "package": "node build/index.js",
    "pretest": "yarn run test-compile && yarn run lint",
    "test": "node ./out/test/runTest.js",
    "test-compile": "tsc -p ./",
    "test-watch": "tsc -watch -p ./",
    "vscode:prepublish": "yarn run build",
    "watch": "webpack --watch"
  },
  "contributes": {
    "commands": [
      {
        "command": "fsMonitor.toggleOnOff",
        "title": "FS Monitor: Toggle On/Off"
      }
    ],
    "configuration": {
      "title": "FS Monitor",
      "properties": {
        "fsMonitor.ignoreNodeModules": {
          "type": "boolean",
          "default": false,
          "description": "Ignore the node_modules folder from the total folder size"
        },
        "fsMonitor.folderSizeEnabled": {
          "type": "boolean",
          "default": true,
          "description": "[DEBUG ONLY] Enable the folder size. **DO NOT ENABLE THIS AS CURRENTLY IT READS THE ENTIRE DIR EVERY SINGLE TIME A FILE IS CHANGED WHICH IS VERY INEFFICIENT**"
        },
        "fsMonitor.position": {
          "type": "string",
          "enum": [
            "left",
            "right"
          ],
          "default": "left",
          "enumDescriptions": [
            "Shows the sizes on the left side of the status bar",
            "Shows the sizes on the right side of the status bar"
          ]
        },
        "fsMonitor.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Toggles the extension on or off"
        }
      }
    }
  },
  "activationEvents": [
    "onStartupFinished"
  ],
  "dependencies": {
    "filesize": "8.0.7",
    "tslib": "2.3.1"
  },
  "devDependencies": {
    "@swc/core": "1.2.154",
    "@types/node": "17.0.21",
    "@types/vscode": "1.38.0",
    "@typescript-eslint/eslint-plugin": "5.14.0",
    "@typescript-eslint/parser": "5.14.0",
    "eslint": "8.11.0",
    "swc-loader": "0.1.15",
    "typescript": "4.6.2",
    "vsce": "2.7.0",
    "webpack": "5.70.0",
    "webpack-cli": "4.9.2"
  },
  "engines": {
    "vscode": "^1.38.0"
  },
  "icon": "images/icon.png",
  "preview": false
}
